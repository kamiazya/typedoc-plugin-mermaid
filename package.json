{
  "name": "typedoc-plugin-mermaid",
  "version": "1.0.0",
  "description": "A plugin for TypeDoc that generates graphs for mermaid.js diagrams by using @mermaid annotation.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamiazya/typedoc-plugin-mermaid.git"
  },
  "bugs": {
    "url": "https://github.com/kamiazya/typedoc-plugin-mermaid/issues"
  },
  "homepage": "https://kamiazya.github.io/typedoc-plugin-mermaid/",
  "files": [
    "dist/"
  ],
  "author": "kamiazya <yuki@kamiazya.tech>",
  "license": "MIT",
  "keywords": [
    "typedoc",
    "typedocplugin",
    "mermaid",
    "graph",
    "diagram"
  ],
  "scripts": {
    "docs": "npm --prefix example run doc",
    "lint": "tslint --project ./src/tsconfig.json",
    "build": "rm -rf dist && tsc -p ./src/tsconfig.json",
    "test": "jest",
    "prepare": "yarn lint && yarn build",
    "prerelease": "npm run prepare",
    "release": "release-it"
  },
  "peerDependencies": {
    "typedoc": "^0.14.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "jest": "^24.3.1",
    "release-it": "^10.3.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}"
    }
  }
}
