{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "dist/",
    "declaration": false,
    "esModuleInterop": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
